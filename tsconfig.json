    "sourceMap": true,
    "rootDir": "./src",
    "baseUrl": "./",
    "outDir": "./dist",
    "alwaysStrict": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "paths": {
      "src/*": ["src/*"]
    }
  }
}
